<%- include('partials/result-header.ejs') %>

<nav class="navbar sticky">
  <div class="name-div">
    <span class="name">Symptom Diagnoser</span>
  </div>
  <div class="about-div">
    <a href="/" class="home">HOME</a>
    <a href="/help" class="help">HELP</a>
    <a href="/about" class="about">ABOUT</a>
  </div>
</nav>

<div class="grid">
  <div class="result-box">
    <% if (locals.error) { %>
      <h5 class="error"><%= error %></h5>
    <% } %>
    <% if (locals.disease) { %>
    <h3 class="disease-name"><%= disease %></h3>
    <% } %> <% if (locals.description) { %>
    <p class="description"><%= description %></p>
    <% } %>
  </div>
  <div class="extra-box">
    <% if (locals.precautions) { %>
    <h3 class="precautions">Precautions:</h3>
    <ul class="severity">
      <% precautions.forEach(element => { %>
      <li><%= element %></li>
      <% }); %>
    </ul>
    <% } %>
    <% if(locals.severeity) { %>
    <h3 class="severeity">Symptoms severity:</h3>
    <ul>
      <% for(let key in severeity) { %>
      <li><%= key %> : <%= severeity[key] %></li>
      <% } %>
    </ul>
    <% } %>
  </div>
</div>

<script>
  if (performance.navigation.type === 1) {
    window.location.href = "/";
  }
</script>

<%- include('partials/footer.ejs') %>
